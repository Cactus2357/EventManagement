@page
@model EventManagement.Pages.Events.ManageModel
@using EventManagement.Helpers

@{
    ViewData["Title"] = "Manage Events";
}

<h1>Manage Events</h1>

<p>
    <a asp-page="Create">Create New</a>
    <a asp-page="./Index">Back To View</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Organizer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Venue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Event)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    <span class="badge rounded-pill @(item.Status.Equals("completed") ? "bg-success" : "bg-primary") float-end">
                        @Html.DisplayFor(modelItem => item.Status)
                    </span>
                </td>
                <td>
                    @if (item.OrganizerId == User.GetCurrentUserId())
                    {
                        Write("you");
                    }
                    else
                    {
                        <a asp-page="/Users/Details" asp-route-id="@item.OrganizerId">@item.Organizer.Name</a>
                    }
                </td>
                <td>
                    <a asp-page="/Venues/Details" asp-route-id="@item.VenueId">@item.Venue.Name</a>
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.EventId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.EventId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.EventId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/EventHub")
            .build();

        connection.on("EventReload", function () {
            location.reload();
        });

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
